<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="Theme.Sherlock.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="CustomTheme" parent="Theme.Sherlock.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/background</item>
        <item name="android:textColor">#FFF8DC</item>
        <item name="android:buttonStyle">@style/BlackButton</item>
        

     
    </style>
   <style name="BlueTheme" parent = "CustomTheme">
            <item name="android:windowBackground">@drawable/ocean</item>
            <item name="android:textColor">#000000</item>
            <item name="android:buttonStyle">@style/BlackButton</item>
        </style>
        
   <style name="BlackButton" parent="@android:style/Widget.Button">
       <item name="android:textColor">#FFF8DC</item>
   </style>
</resources>