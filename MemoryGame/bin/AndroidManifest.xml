<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.memorygame"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />
    
    <uses-permission android:name="android.permission.GET_TASKS"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:name="com.example.memorygame.PreviewScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.memorygame.MainMenu"
            android:label="@string/main_menu"
            android:theme="@style/CustomTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ParentActivity" />
        </activity>
        <activity
            android:name="com.example.memorygame.PlayGame"
            android:label="@string/game_page"
            android:theme="@style/CustomTheme" >
       </activity>
        <activity
            android:name="com.example.memorygame.Instructions"
            android:label="@string/instructions"
            android:theme="@style/CustomTheme" >
        </activity>
        <activity
            android:name="com.example.memorygame.Options"
            android:label="@string/options"
            android:theme="@style/CustomTheme" >
        </activity>
        <activity
            android:name="com.example.memorygame.HighScores"
            android:label="@string/high_scores"
            android:theme="@style/CustomTheme" >
        </activity>
        <activity
            android:name="com.example.memorygame.About"
            android:label="@string/about"
            android:theme="@style/CustomTheme" >
        </activity>
        <activity
            android:name="com.example.memorygame.Feedback"
            android:label="@string/feedback"
            android:theme="@style/CustomTheme" >
        </activity>
    </application>

</manifest>