<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ucdmscconversion.memorygame"
    android:versionCode="4"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:name="com.ucdmscconversion.memorygame.PreviewScreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ucdmscconversion.memorygame.MainMenu"
            android:label="@string/main_menu"
            android:screenOrientation="portrait"
            android:theme="@style/xmas" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ParentActivity" />
        </activity>

        <activity
            android:name="com.ucdmscconversion.memorygame.PlayGame"
            android:label="@string/main_menu"
            android:screenOrientation="portrait"
            android:theme="@style/xmas" >
            <intent-filter>
                <action android:name="com.example.memorygame.PLAYGAME" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ucdmscconversion.memorygame.Instructions"
            android:label="@string/instructions"
            android:screenOrientation="portrait"
            android:theme="@style/xmas" >
        </activity>
        <activity
            android:name="com.ucdmscconversion.memorygame.Options"
            android:label="@string/options"
            android:screenOrientation="portrait"
            android:theme="@style/xmas" >
        </activity>
        <activity
            android:name="com.ucdmscconversion.memorygame.HighScores"
            android:label="@string/high_scores"
            android:screenOrientation="portrait"
            android:theme="@style/xmas" >
        </activity>
        <activity
            android:name="com.ucdmscconversion.memorygame.About"
            android:label="@string/about"
            android:screenOrientation="portrait"
            android:theme="@style/xmas" >
        </activity>
        <activity
            android:name="com.ucdmscconversion.memorygame.Feedback"
            android:label="@string/feedback"
            android:screenOrientation="portrait"
            android:theme="@style/xmas" >
        </activity>
        <activity
            android:name="com.ucdmscconversion.memorygame.GlobalScores"
            android:label="@string/high_scores"
            android:screenOrientation="portrait"
            android:theme="@style/xmas" >
        </activity>
        <activity
            android:name="com.ucdmscconversion.memorygame.InsertScores"
            android:label="@string/title_activity_insert_scores"
            android:parentActivityName="com.example.memorygame"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.memorygame" />
        </activity>
    </application>

</manifest>